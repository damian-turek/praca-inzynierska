generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id              Int                      @id @default(autoincrement())
  email           String                   @db.VarChar(255)
  password        String                   @db.VarChar(255)
  created_at      DateTime?                @default(now()) @db.Timestamp(6)
  role            String                   @db.VarChar(255)
  first_name      String                   @db.VarChar(50)
  second_name     String                   @db.VarChar(50)
  phone_number    String                   @db.VarChar(20)
  apartment_id    Int?
  apartment       Apartment?               @relation(fields: [apartment_id], references: [id])
  news            News[]
  reportsHandled  ProblemReport[]          @relation("handledBy")
  reportsReported ProblemReport[]          @relation("reportedBy")
  reservations    SharedSpaceReservation[]

  // ðŸ‘‡ relacje do czatu
  userChats  Chat[] @relation("UserChats")
  adminChats Chat[] @relation("AdminChats")

  Message Message[]

  billingDocuments BillingDocument[]
}

model Apartment {
  id           Int        @id @default(autoincrement())
  number       String     @db.VarChar(50)
  community_id Int?
  community    Community? @relation(fields: [community_id], references: [id], onDelete: Cascade)
  users        Users[]
}

model Community {
  id           Int           @id @default(autoincrement())
  name         String        @db.VarChar(255)
  address      String
  apartments   Apartment[]
  news         News[]
  sharedSpaces SharedSpace[]
}

model News {
  id           Int        @id @default(autoincrement())
  title        String     @db.VarChar(255)
  content      String
  created_at   DateTime   @default(now()) @db.Timestamp(6)
  updated_at   DateTime?  @updatedAt
  created_by   Int
  community_id Int?
  user         Users      @relation(fields: [created_by], references: [id], onDelete: Cascade)
  community    Community? @relation(fields: [community_id], references: [id], onDelete: Cascade)
}

model SharedSpace {
  id           Int                      @id @default(autoincrement())
  name         String                   @db.VarChar(255)
  description  String?
  max_places   Int
  community_id Int?
  community    Community?               @relation(fields: [community_id], references: [id], onDelete: Cascade)
  reservations SharedSpaceReservation[]
}

model SharedSpaceReservation {
  id              Int         @id @default(autoincrement())
  shared_space_id Int
  start_time      DateTime
  end_time        DateTime
  places_reserved Int
  user_id         Int
  created_at      DateTime    @default(now()) @db.Timestamp(6)
  sharedSpace     SharedSpace @relation(fields: [shared_space_id], references: [id], onDelete: Cascade)
  user            Users       @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model ProblemReport {
  id          Int          @id @default(autoincrement())
  title       String       @db.VarChar(255)
  description String
  created_at  DateTime     @default(now()) @db.Timestamp(6)
  updated_at  DateTime?    @updatedAt
  status      ReportStatus @default(ZGLOSZONE)

  reported_by Int
  handled_by  Int?

  accepted_at      DateTime?
  closed_at        DateTime?
  started_at       DateTime?
  rejection_reason String?

  reporter Users  @relation("reportedBy", fields: [reported_by], references: [id], onDelete: Cascade)
  handler  Users? @relation("handledBy", fields: [handled_by], references: [id])
}

model Chat {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId  Int
  adminId Int?

  user     Users     @relation("UserChats", fields: [userId], references: [id], onDelete: Cascade)
  admin    Users?    @relation("AdminChats", fields: [adminId], references: [id])
  messages Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  chatId    Int
  senderId  Int

  chat   Chat  @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender Users @relation(fields: [senderId], references: [id], onDelete: Cascade)
}

enum ReportStatus {
  ZGLOSZONE
  PRZYJETY
  W_TRAKCIE
  ZREALIZOWANE
  ODRZUCONY
  PRZYJETE
  ODRZUCONE
  ZAKONCZONE
}

model UserRequest {
  id           Int           @id @default(autoincrement())
  email        String        @db.VarChar(255)
  pesel        String        @db.VarChar(11)
  first_name   String
  second_name  String
  phone_number String
  created_at   DateTime      @default(now())
  status       RequestStatus @default(PENDING)
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model BillingDocument {
  id         Int      @id @default(autoincrement())
  user_id    Int
  url        String
  created_at DateTime @default(now())

  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)
}
